<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="standard" />

    <Button
        android:id="@+id/bt_single_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start single top activity" />

    <Button
        android:id="@+id/bt_single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start single task activity" />

    <Button
        android:id="@+id/bt_single_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start single instance activity" />
</LinearLayout>